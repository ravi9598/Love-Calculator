<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.instilive.lovely.ResultActivity">

    <include
        android:id="@+id/resultToolbar"
        layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/resultToolbar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Ravi Prakash"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="cursive"
            android:id="@+id/result_lover_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/heart"
            android:src="@drawable/heart"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <TextView
            android:text="Ravi Prakash"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="cursive"
            android:id="@+id/result_lover_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/love_button"
                android:id="@+id/_image"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <TextView
                android:layout_centerInParent="true"
                android:textColor="@color/color_white"
                android:textStyle="bold"
                android:padding="5dp"
                android:fontFamily="@font/diplomata_sc"
                android:id="@+id/loveResult"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/sofia"
            android:textSize="20sp"
            android:id="@+id/result_quote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:background="@drawable/btn_bg"
            android:textSize="19dp"
            android:textAllCaps="false"
            android:text="Share"
            android:layout_marginTop="15dp"
            android:id="@+id/result_share_btn"
            android:layout_width="150dp"
            android:layout_height="50dp"/>

    </LinearLayout>

</RelativeLayout>
